{% extends 'base.html.twig' %}

{% block body %}
    {% if app.user %}
        <h1>Latest Uploads</h1>

        <div class="card-columns">
            {% for artwork in artworks %}
                <div class="card">
                    <a href="/u/{{ artwork.artist }}/view/{{ artwork.id }}"><img src="/uploads/{{ artwork.file }}" class="card-img-top"></a>
                    <div class="card-body">
                        <a href="/u/{{ artwork.artist }}/view/{{ artwork.id }}"><h5 class="card-title">{{ artwork.title }}</h5></a>
                        <p class="card-text">by <strong><a href="/u/{{ artwork.artist }}">{{ artwork.artist }}</a></strong></p>
                        <p class="card-text"><small class="text-muted">{{ artwork.date.date }}</small></p>
                    </div>
                </div>
            {% endfor %}
        </div>

    {% else %}
        <p>Welcome to <strong>apoll.io</strong>, a platform for artists to share their work!</p>
        <p>Please <a href="/register">sign up</a> to access the full functionality of the site.</p>
    {% endif %}
{% endblock %}