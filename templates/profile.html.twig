{% extends 'base.html.twig' %}

{% block body %}

    <h1>{{ artist }} <span class="btn-group ml-3">
        <button class="btn btn-sm btn-primary">{{ subCount }}</button>
        <button class="btn btn-sm btn-primary"><i class="far fa-star"></i></button>
    </span></h1>

    <div class="card-columns">
    {% for artwork in artworks %}
        <div class="card">
            <a href="/u/{{ artist }}/view/{{ artwork.id }}"><img src="/uploads/{{ artwork.filelink }}" class="card-img-top"></a>
            <div class="card-body">
                <a href="/u/{{ artist }}/view/{{ artwork.id }}"><h5 class="card-title">{{ artwork.title }}</h5></a>
                <p class="card-text"><small class="text-muted">{{ artwork.created_at }}</small></p>
            </div>
        </div>
    {% endfor %}
    </div>

{% endblock %}